<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:contentPaddingBottom="0dp"
    app:contentPaddingTop="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPoster_ItemMovie"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="135dp"
            android:scaleType="centerCrop"
            android:elevation="0dp"
            tools:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_toEndOf="@id/ivPoster_ItemMovie"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTitle_ItemMovie"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:maxLength="15"
                android:singleLine="true"
                android:textSize="@dimen/txt_size_ex_large"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Avatar"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDate_ItemMovie"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:maxLength="15"
                android:singleLine="true"
                android:textSize="@dimen/txt_size_large"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Dec 15 2009"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvOverview_ItemMovie"
                android:ellipsize="end"
                android:maxLines="4"
                android:singleLine="false"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/sample_overview"/>

        </LinearLayout>



    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
